data/
*.db
*.sqlite

# Uploads (should be mounted as volume)
public/uploads/*
!public/uploads/.gitkeep

# Kamal/deploy files
.kamal
config/deploy.yml

# Logs
*.log
npm-debug.log*

# TypeScript build info
*.tsbuildinfo

# Temporary files
tmp/
temp/
