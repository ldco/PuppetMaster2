.output
.nuxt
dist

# Development files
.git
.gitignore
.gitattributes

# Documentation
*.md
docs/
!README.md

# Environment files (secrets should be injected at runtime)
.env
.env.*
!.env.example

# IDE and editor files
.vscode
.idea
*.swp
*.swo
*~

# OS files
.DS_Store
Thumbs.db

# Test files
coverage
*.test.ts
tests/
vitest.config.ts

