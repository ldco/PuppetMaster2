{
  "name": "app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx server/database/seed.ts",
    "db:reset": "rm -f data/sqlite.db && npm run db:migrate && npm run db:seed",
    "init": "tsx scripts/init-cli.ts",
    "init:headless": "tsx scripts/init-headless.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run --dir tests/server tests/components",
    "test:api": "vitest run --dir tests/api",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:e2e:playwright": "playwright test",
    "test:e2e:playwright:ui": "playwright test --ui",
    "playwright:install": "playwright install",
    "generate:favicons": "create-favicon public/favicon.svg public --overwrite --no-manifest",
    "deploy": "kamal deploy -c deploy.yml",
    "deploy:setup": "kamal setup -c deploy.yml",
    "deploy:rollback": "kamal rollback -c deploy.yml",
    "deploy:logs": "kamal app logs -c deploy.yml",
    "deploy:shell": "kamal app exec -i bash -c deploy.yml",
    "docker:build": "docker build -t puppetmaster2 .",
    "docker:run": "docker run -p 3000:3000 --env-file .env puppetmaster2",
    "server:provision": "cd ansible && ansible-playbook playbook.yml",
    "server:provision:check": "cd ansible && ansible-playbook playbook.yml --check"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.952.0",
    "@nuxtjs/color-mode": "^4.0.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@pinia/nuxt": "^0.11.3",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/ioredis": "^4.28.10",
    "@types/sanitize-html": "^2.16.0",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "hamburgers": "^1.2.1",
    "ioredis": "^5.9.1",
    "nodemailer": "^7.0.11",
    "nuxt": "^4.2.2",
    "pinia": "^3.0.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "unplugin-icons": "^22.5.0",
    "vite-svg-loader": "^5.1.0",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.17.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@iconify/json": "^2.2.418",
    "@nuxt/test-utils": "^3.21.0",
    "@nuxtjs/critters": "^0.9.0",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/nodemailer": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vite-pwa/nuxt": "^1.1.0",
    "@vue/test-utils": "^2.4.6",
    "create-favicon": "^2.1.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.17.0",
    "eslint-plugin-vue": "^9.32.0",
    "happy-dom": "^20.0.0",
    "lighthouse": "^13.0.1",
    "postcss-preset-env": "^10.5.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "vitest": "^3.2.0",
    "vue-eslint-parser": "^9.4.3"
  }
}
